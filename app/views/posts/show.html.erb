<div id="hero-unit">
  <fieldset>
    <legend><%= @post.title %></legend>
    <div class="well">
      <%= @post.content.html_safe %>
    </div>

    <% if signed_in? %>
    <div class="pull-right well">
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>
        
  </fieldset>
</div>