<% @sidebar = true %>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <div id="hero-unit">
        <fieldset>
          <legend><%= link_to post.title, post %></legend>
          <div class="well">
            <%= post.content %>
          </div>
          <tr>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </fieldset>
      </div>
    <% end %>
  </tbody>
</table>

<br>